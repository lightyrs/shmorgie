!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1, shrink-to-fit=no", name: "viewport"}/
    %title Harris Novick
    %meta{name: "description", content: "The personal homepage of Harris Novick. Writing software, writing songs, building products and companies, meeting new people and learning new skills; staying interested and vital above most else."}/
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .container
      .row.title-row
        .col
          %h1.text-center HDN
      .row.image-row
        .col
        .col.text-center= image_tag "mind-blown.gif", alt: "Harris Novick", class: "mind-blown"
        .col
      .row
        .col
          .d-flex.justify-content-between.align-items-center
            = link_to image_tag("socialBlockGithub.svg", alt: "GitHub", class: "img-fluid"), "https://github.com/lightyrs", class: "d-inline-block"
            = link_to image_tag("socialBlockLinkedin.svg", alt: "LinkedIn", class: "img-fluid"), "https://linkedin.com/in/harrisnovick", class: "d-inline-block"
            = link_to image_tag("socialBlockTumblr.svg", alt: "Tumblr", class: "img-fluid"), "https://harrisnovick.tumblr.com", class: "d-inline-block"
